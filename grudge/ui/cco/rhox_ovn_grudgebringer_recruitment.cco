rhox_ovn_grudgebringer_recruitment
{
    CanRespawn(CcoCampaignMilitaryForce parent_force, CcoCampaignCharacter general_to_respawn)
    {
        general_to_respawn.IsWounded == false
        && general_to_respawn.TurnsLockedInLimbo == 0
        && parent_force.CanSpawnForce("ovn_grudge_basic_camp", true)
    }
}